# Database Configuration (Docker PostgreSQL on port 5433)
PORT=8080
DATABASE_URL=postgres://events_user:events_password@localhost:5433/events_rewards?sslmode=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-please

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=events-rewards
MINIO_USE_SSL=false

# Migration Configuration
# Options: auto (default), safe, skip
# auto: Standard GORM migration, fails on errors
# safe: Continues on migration warnings
# skip: Skips migration entirely (use when tables exist)
MIGRATION_MODE=safe

# File Upload Configuration (Legacy - can be removed after migration)
UPLOAD_PATH=./uploads

# Database Connection Details (for reference)
DB_HOST=localhost
DB_PORT=5433
DB_USER=events_user
DB_PASSWORD=events_password
DB_NAME=events_rewards

# Alternative: If you stop local PostgreSQL, you can use port 5432
# DATABASE_URL=postgres://events_user:events_password@localhost:5432/events_rewards?sslmode=disable
